<!DOCTYPE html>
<html lang="en">
<head>
    {% include '_meta.html.twig' %}
    <title>{% block title %}How To Code Well Podcast{% endblock %}</title>
    <meta name="theme-color" content="#14252c">
    <link rel="canonical" href="https://howtocodewell.fm" />
    <link rel="alternate" href="https://howtocodewell.fm"  hreflang="en" />
    <link rel="icon" sizes="192x192" href="/assets/images/logos/howtocodewell_logo_192x192.png">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header id="pageHeader">
    <h1 class="logo"><a href="{{ path('home') }}">How To Code Well Podcast</a></h1>
    <nav>
        <ul>
            <li><a href="{{ path('archive', {'page': 1}) }}">Episodes</a></li>
            <li><a href="{{ path('contact') }}">Contact</a></li>
        </ul>
        <div class="nav__icon">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </nav>
</header>
<article id="mainArticle">{% block body %}{% endblock %}</article>
<footer id="pageFooter">
    <nav>
        <ul>
            <li>
                <a href="{{ path('archive') }}">Archive</a>
            </li>
            <li>
                <a href="{{ path('contact') }}">Contact</a>
            </li>
            <li>
                <a href="{{ path('sponsor') }}">Sponsor</a>
            </li>
            <li>
                <a href="{{ path('rss') }}" target="_blank">RSS</a>
            </li>
        </ul>
    </nav>
</footer>

</body>
</html>
